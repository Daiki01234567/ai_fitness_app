{
  "name": "firestore-rules-tests",
  "version": "1.0.0",
  "description": "Firestore security rules tests for AI Fitness App",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "firebase": "^10.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.test.ts",
      "!**/node_modules/**"
    ]
  }
}