{
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8080,
      "host": "127.0.0.1"
    },
    "functions": {
      "port": 5001,
      "host": "127.0.0.1"
    },
    "storage": {
      "port": 9199,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "127.0.0.1"
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firebase\\firestore.rules",
    "indexes": "firebase\\firestore.indexes.json",
    "debug": "firebase\\firestore-debug.log"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "functions\\node_modules",
        "functions\\.git",
        "functions\\firebase-debug.log",
        "functions\\firebase-debug.*.log",
        "functions\\*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "storage": {
    "rules": "firebase\\storage.rules"
  }
}
